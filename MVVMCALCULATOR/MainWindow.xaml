<Window x:Class="MVVMCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MVVM Calculator" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Text="{Binding FirstNumber, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.00}, ConverterCulture=ru-RU}" HorizontalAlignment="Center" Width="150" Margin="10"/>
        <TextBox Grid.Row="1" Text="{Binding SecondNumber, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:0.00}, ConverterCulture=ru-RU}" HorizontalAlignment="Center" Width="150" Margin="10"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="+" Width="50" Margin="5" Command="{Binding AddCommand}"/>
            <Button Content="-" Width="50" Margin="5" Command="{Binding SubtractCommand}"/>
        </StackPanel>
        <TextBlock Grid.Row="3" Text="Result:" HorizontalAlignment="Center" Margin="10"/>
        <TextBlock Grid.Row="4" Text="{Binding Result, StringFormat={}{0:0.00}, ConverterCulture=ru-RU}" HorizontalAlignment="Center" FontWeight="Bold" Margin="10"/>
    </Grid>
</Window>